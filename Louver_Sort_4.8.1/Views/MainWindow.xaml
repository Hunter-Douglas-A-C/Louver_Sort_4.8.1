        mc:Ignorable="d"
        d:DesignHeight="800"
        d:DesignWidth="800"
        Title="MainWindow"
        Closing="Window_Closing">
    <Grid>

        <ContentControl x:Name="CTCPopup"
                        Panel.ZIndex="1"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        Content="{Binding Popup}" IsEnabled="True"/>

