<Window x:Class="Louver_Sort_4._8._1.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Louver_Sort_4._8._1"
        mc:Ignorable="d"
        d:DesignHeight="1080"
        d:DesignWidth="1920"
        Title="MainWindow"
        Closing="Window_Closing"
        Height="1080"
        Width="1920"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize">

    <!--<Window.InputBindings>
        <KeyBinding Key="Enter"
                    Command="{Binding FilterEnter}" />
    </Window.InputBindings>-->


    <!--Topmost="True"-->
    <Grid>

        
        <Border BorderBrush="Black"
                BorderThickness="5"
                CornerRadius="5"
                Panel.ZIndex="1"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                Width="400"
                Height="400"
                Visibility="{Binding PopUpVisible}">
            <ContentControl x:Name="CTCPopup"
                            Content="{Binding SelectedPopUp}" />
        </Border>


        <Border Panel.ZIndex="0"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                >
            <Border.Effect>
                <BlurEffect Radius="{Binding MainContentBlurRadius}" />
            </Border.Effect>
            <ContentControl x:Name="CTCMain"
                            Content="{Binding SelectedView}"
                            IsEnabled="{Binding MainEnabled}" />
        </Border>
    </Grid>
</Window>
