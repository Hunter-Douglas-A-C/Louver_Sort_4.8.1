                                Margin="15,15,15,15"
                                Width="400"
                                Height="100"
                                FontSize="30"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                materialDesign:ButtonAssist.CornerRadius="10"
                                ToolTip="Select a louver from the list and remove it" />
                        <Button Content="Rework Set"
                                Command="{Binding ReworkSet}"
                                IsEnabled="{Binding IsEnabledReworkSet}"
                                Margin="15,15,15,15"
                                Width="400"
                                Height="100"
                                FontSize="30"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                materialDesign:ButtonAssist.CornerRadius="10"
                                ToolTip="Print the first set of labels" />
                        <Button Grid.Row="4"
                                Content="Approve Set"
                                Command="{Binding PrintSortedLabels}"
                                IsEnabled="{Binding IsEnabledApproveSet}"
                                Margin="15,15,15,15"
                                Width="400"
                                Height="100"
                                FontSize="30"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                materialDesign:ButtonAssist.CornerRadius="10"
                                ToolTip="Print out the sorted label set" />
