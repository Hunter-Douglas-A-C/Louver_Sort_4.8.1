        <materialDesign:ColorZone Grid.Row="1"
                                  VerticalAlignment="Stretch"
                                  HorizontalAlignment="Stretch"
                                  Margin="15,15,15,15"
                                  Padding="16"
                                  materialDesign:ElevationAssist.Elevation="Dp4"
                                  ClipToBounds="False"
                                  CornerRadius="10"
                                  Mode="PrimaryDark">
            <ScrollViewer Grid.Column="0"
                          Margin="15,15,15,15"
                          VerticalAlignment="Stretch"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Center"
                          HorizontalScrollBarVisibility="Auto"
                          helpers:ScrollViewerExtensions.AlwaysScrollToEnd="True">
                <ListView ItemsSource="{Binding ReportContent}"
                          SelectedItem="{Binding ReCutSelectedLouver}"
                          FontSize="20">

                    <ListView.View>

                        <GridView AllowsColumnReorder="true"
                                  ColumnHeaderToolTip="Louver Data">
                            <GridViewColumn DisplayMemberBinding="{Binding LouverID}"
                                            Header="LouverID"
                                            Width="225" />
                            <GridViewColumn DisplayMemberBinding="{Binding LouverOrder}"
                                            Header="LouverOrder"
                                            Width="225" />
                            <GridViewColumn DisplayMemberBinding="{Binding CurrWarp}"
                                            Header="CurrWarp"
                                            Width="225" />
                            <GridViewColumn DisplayMemberBinding="{Binding Status}"
                                            Header="Status"
                                            Width="225" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </ScrollViewer>
        </materialDesign:ColorZone>




        <Grid Grid.Row="1"
              Grid.Column="1"
              Grid.ColumnSpan="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="3*" />
            </Grid.RowDefinitions>


            <StackPanel Grid.Row="0"
                        Grid.Column="0">
                <TextBlock Text="Reading 1" />
                <TextBox VerticalAlignment="Center"
                         Width="50"
                         IsReadOnly="True"
                         Text="{Binding RecutReading1}" />
            </StackPanel>

            <StackPanel Grid.Row="0"
                        Grid.Column="1">
                <TextBlock Text="Reading 2" />
                <TextBox VerticalAlignment="Center"
                         Width="50"
                         IsReadOnly="True"
                         Text="{Binding RecutReading2}" />
            </StackPanel>

            
            <materialDesign:ColorZone Grid.Row="2"
                                      Grid.ColumnSpan="2"
                                      VerticalAlignment="Stretch"
                                      HorizontalAlignment="Stretch"
                                      Margin="15,15,15,15"
                                      Padding="16"
                                      materialDesign:ElevationAssist.Elevation="Dp4"
                                      ClipToBounds="False"
                                      CornerRadius="10"
                                      Mode="PrimaryDark">
                <Grid>
                    <lvc:CartesianChart>
                        <lvc:CartesianChart.Series>
                            <lvc:LineSeries Values="{Binding VoltageValues}" />
                        </lvc:CartesianChart.Series>
                    </lvc:CartesianChart>
                    <Button Content="Reconnect"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            FontSize="30"
                            FontWeight="ExtraBold"
                            Foreground="#521919"
                            Background="Transparent"
                            Visibility="{Binding DisconnectedEnabled}"
                            Command="{Binding ReconnectToDataQ}" />
                </Grid>
            </materialDesign:ColorZone>

            <StackPanel Grid.Row="1"
                        Grid.Column="0">

                <StackPanel Orientation="Horizontal">
                    <Button Content="Check Top Value"
                            Width="400"
                            Height="80"
                            FontSize="30"
                            Margin="5,5,5,5"
                            Command="{Binding CheckTop}"
                            IsEnabled="{Binding CheckTopEnabled}" />
                    <StackPanel>
                        <TextBlock Text="Is louver an acceptable replacement" />
                        <TextBox Text="{Binding TxtTopAcceptableReplacement}"
                                 IsReadOnly="True" />
                    </StackPanel>
                </StackPanel>



            </StackPanel>



            <StackPanel Grid.Row="1"
                        Grid.Column="1">

                <StackPanel Orientation="Horizontal">
                    <Button Content="Check Bottom Value"
                            Width="400"
                            Height="80"
                            FontSize="30"
                            Margin="5,5,5,5"
                            Command="{Binding CheckBottom}"
                            IsEnabled="{Binding CheckBottomEnabled}" />
                    <StackPanel>
                        <TextBlock Text="Is louver an acceptable replacement" />
                        <TextBox Text="{Binding TxtBottomAcceptableReplacement}"
                                 IsReadOnly="True" />
                    </StackPanel>
                </StackPanel>


            </StackPanel>








        </Grid>














    </Grid>


























