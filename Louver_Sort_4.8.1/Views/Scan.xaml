                <Grid>
                    <lvc:CartesianChart x:Name="Chart">
                        <lvc:CartesianChart.Series>
                            <lvc:LineSeries Values="{Binding VoltageValues}" />
                        </lvc:CartesianChart.Series>
                    </lvc:CartesianChart>
                    <Button Content="Reconnect"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            FontSize="30"
                            FontWeight="ExtraBold"
                            Foreground="#521919"
                            Background="Transparent"
                            Visibility="{Binding DisconnectedEnabled}"
                            Command="{Binding ReconnectToDataQ}" />
                </Grid>





                <ScrollViewer Grid.Column="1">
                    <ListView ItemsSource="{Binding ListViewContent}"
                              FontSize="25">

                        <ListView.View>

                            <GridView AllowsColumnReorder="true"
                                      ColumnHeaderToolTip="Louver Data">
                                <GridViewColumn DisplayMemberBinding="{Binding LouverID}"
                                                Header="LouverID"
                                                Width="150" />
                                <GridViewColumn DisplayMemberBinding="{Binding Side}"
                                                Header="Side"
                                                Width="100" />
                                <GridViewColumn DisplayMemberBinding="{Binding Distance}"
                                                Header="Distance"
                                                Width="100" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </ScrollViewer>
            </Grid>


            <StackPanel Grid.Column="1"
                        Grid.RowSpan="4">
                <Button Content="Print Louver ID Labels"
                        Width="400"
                        Height="80"
                        FontSize="30"
                        Margin="5,5,5,5"
                        Command="{Binding PrintStartingLabels}"
                        IsEnabled="{Binding PrintLouverIDLabelsEnabled}" />
                <Button Content="Acquire Reading #1"
                        Width="400"
                        Height="80"
                        FontSize="30"
                        Margin="5,5,5,5"
                        Command="{Binding AcqReading1}"
                        IsEnabled="{Binding Acquare1Enabled}" />
                <Button Content="Acquire Reading #2"
                        Width="400"
                        Height="80"
                        FontSize="30"
                        Margin="5,5,5,5"
                        Command="{Binding AcqReading2}"
                        IsEnabled="{Binding Acquare2Enabled}" />
                <Button Content="Sort Louver Set"
                        Width="400"
                        Height="80"
                        FontSize="30"
                        Margin="5,5,5,5"
                        Command="{Binding SortActiveSet}"
                        IsEnabled="{Binding SortLouverSetEnabled}" />
                <Button Content="Review Louver Report"
                        Width="400"
                        Height="80"
                        FontSize="30"
                        Margin="5,5,5,5"
                        Command="{Binding ReviewLouverReport}"
                        IsEnabled="{Binding ReviewLouverReportEnabled}" />
                <Button Content="Print Sorted Louver Labels"
                        Width="400"
                        Height="80"
                        FontSize="30"
                        Margin="5,5,5,5"
                        Command="{Binding PrintSortedLabels}"
                        IsEnabled="{Binding PrintLouverSortedLabels}" />
                <Button Content="Next Louver Set"
                        Width="400"
                        Height="80"
                        FontSize="30"
                        Margin="5,5,5,5"
                        Command="{Binding NextLouverSet}"
                        IsEnabled="{Binding NextLouverSetEnabled}" />

            </StackPanel>

            <Button Grid.Column="1"
                    Grid.Row="5"
                    Content="Main Menu"
                    Width="400"
                    Height="80"
                    FontSize="30"
                    Margin="5,5,5,5"
                    Command="{Binding UpdateView}"
                    CommandParameter="Menu" />


        </Grid>



    </Grid>
</UserControl>
