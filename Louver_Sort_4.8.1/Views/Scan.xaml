<UserControl x:Class="Louver_Sort_4._8._1.Views.Scan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Louver_Sort_4._8._1.Views"
             xmlns:views="clr-namespace:Louver_Sort_4._8._1.Views"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:helpers="clr-namespace:Louver_Sort_4._8._1.Helpers"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>


        <Grid Grid.Row="0"
              Background="CornflowerBlue">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>


            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="3*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Louver Set Data Acquisition"
                           FontSize="25"
                           Grid.Row="0" />
                <TextBlock Text="Barcodes"
                           FontSize="15"
                           Grid.Row="1"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15" />
            </Grid>


            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal"
                            Grid.Row="0"
                            Grid.Column="0">
                    <TextBlock Text="Search Barcode 1:"
                               VerticalAlignment="Center"/>
                    <TextBox Width="150"
                             Margin="5,15,0,15" 
                             Text="{Binding Barcode1}"/>

                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Grid.Row="1"
                            Grid.Column="0">
                    <TextBlock Text="Search Barcode 2:"
                               VerticalAlignment="Center" />
                    <TextBox Width="150"
                             Margin="5,15,0,15"
                             Text="{Binding Barcode2}" />
                </StackPanel>

                <Button Grid.Column="1"
                        Grid.RowSpan="2"
                        Margin="15,15,15,15" />
            </Grid>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0"
                        Grid.Column="0"
                        Margin="10,0,5,0">
                <TextBlock Text="Barcodes"
                           FontSize="12"
                           HorizontalAlignment="Left" />
                <StackPanel Orientation="Horizontal">
                    <TextBox Width="150"
                             Margin="0,0,0,0" />
                    <TextBox Width="150"
                             Margin="10,0,0,0" />
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="1"
                        Grid.Column="0"
                        Orientation="Horizontal"
                        Margin="5,5,5,5">
                <StackPanel VerticalAlignment="Center"
                            Margin="5,0,5,0">
                    <TextBlock Text="Order"
                               HorizontalAlignment="Center" />
                    <TextBox VerticalAlignment="Center"
                             Width="150" />
                </StackPanel>
                <StackPanel VerticalAlignment="Center"
                            Margin="5,0,5,0">
                    <TextBlock Text="Line"
                               HorizontalAlignment="Center" />
                    <TextBox VerticalAlignment="Center"
                             Width="50" />
                </StackPanel>
                <StackPanel VerticalAlignment="Center"
                            Margin="5,0,5,0">
                    <TextBlock Text="Unit"
                               HorizontalAlignment="Center" />
                    <TextBox VerticalAlignment="Center"
                             Width="50" />
                </StackPanel>
                <StackPanel VerticalAlignment="Center"
                            Margin="5,0,5,0">
                    <TextBlock Text="PanelID"
                               HorizontalAlignment="Center" />
                    <TextBox VerticalAlignment="Center"
                             Width="50" />
                </StackPanel>
                <StackPanel VerticalAlignment="Center"
                            Margin="5,0,5,0">
                    <TextBlock Text="Louver Set"
                               HorizontalAlignment="Center" />
                    <TextBox VerticalAlignment="Center"
                             Width="50" />
                </StackPanel>
                <StackPanel VerticalAlignment="Center"
                            Margin="5,0,5,0">
                    <TextBlock Text="XL"
                               HorizontalAlignment="Center" />
                    <CheckBox />
                </StackPanel>
                <StackPanel VerticalAlignment="Center"
                            Margin="5,0,5,0">
                    <TextBlock Text="Width"
                               HorizontalAlignment="Center" />
                    <TextBox VerticalAlignment="Center"
                             Width="50" />
                </StackPanel>
                <StackPanel VerticalAlignment="Center"
                            Margin="5,0,5,0">
                    <TextBlock Text="Length"
                               HorizontalAlignment="Center" />
                    <TextBox VerticalAlignment="Center"
                             Width="50" />
                </StackPanel>
            </StackPanel>


            <Grid Grid.Row="2"
                  Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0"
                            Grid.Column="0">
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Margin="5,0,5,0">
                        <TextBlock Text="Current Louver ID:"
                                   HorizontalAlignment="Center" />
                        <TextBox VerticalAlignment="Center"
                                 HorizontalAlignment="Right"
                                 Width="75" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Margin="5,0,5,0">
                        <TextBlock Text="Current Reading:"
                                   HorizontalAlignment="Center" />
                        <TextBox VerticalAlignment="Center"
                                 HorizontalAlignment="Right"
                                 Width="75" />
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Row="0"
                            Grid.Column="1">
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Margin="5,0,5,0">
                        <TextBlock Text="Reading #1:"
                                   HorizontalAlignment="Center" />
                        <TextBox VerticalAlignment="Center"
                                 Width="75" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Margin="5,0,5,0">
                        <TextBlock Text="Reading #2:"
                                   HorizontalAlignment="Center" />
                        <TextBox VerticalAlignment="Center"
                                 HorizontalAlignment="Right"
                                 Width="75" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Margin="5,0,5,0">
                        <TextBlock Text="Warp:"
                                   HorizontalAlignment="Center" />
                        <TextBox VerticalAlignment="Center"
                                 HorizontalAlignment="Right"
                                 Width="75" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Margin="5,0,5,0">
                        <TextBlock Text="Sag:"
                                   HorizontalAlignment="Center" />
                        <TextBox VerticalAlignment="Center"
                                 HorizontalAlignment="Right"
                                 Width="75" />
                    </StackPanel>
                </StackPanel>


            </Grid>


            <Grid Grid.Row="3"
                  Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>







