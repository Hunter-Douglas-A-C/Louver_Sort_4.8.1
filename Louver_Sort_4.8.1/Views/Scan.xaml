                <Grid>
                    <lvc:CartesianChart x:Name="Chart">
                            <lvc:CartesianChart.Series>
                                <lvc:LineSeries Values="{Binding VoltageValues}" />
                            </lvc:CartesianChart.Series>
                        </lvc:CartesianChart>
                    <TextBlock Text="Disconencted"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="30"
                               FontWeight="ExtraBold"
                               Foreground="#521919"
                               Visibility="{Binding DisconnectedEnabled}" />
                </Grid>
                




                <ScrollViewer Grid.Column="1">
                    <ListView>

                        <ListView.View>

                            <GridView AllowsColumnReorder="true"
                                      ColumnHeaderToolTip="Louver Data">

                                <GridViewColumn DisplayMemberBinding="{Binding Path=LouverID}"
                                                Header="LouverID"
                                                Width="100" />

                                <GridViewColumn DisplayMemberBinding="{Binding Path=Side}"
                                                Header="Side"
                                                Width="100" />

                                <GridViewColumn DisplayMemberBinding="{Binding Path=Distance}"
                                                Header="Distance"
                                                Width="100" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </ScrollViewer>
            </Grid>


            <StackPanel Grid.Column="1"
                        Grid.RowSpan="4">
                <Button Content="StartDataQ"
                        Width="175"
                        Height="30"
                        Margin="5,5,5,5"
                        Command="{Binding StartDataQ}" />
                <Button Content="Printer"
                        Width="175"
                        Height="30"
                        Margin="5,5,5,5"
                        Command="{Binding TestZebra}" />
                <Button Content="DataQDisconnect"
                        Width="175"
                        Height="30"
                        Margin="5,5,5,5"
                        Command="{Binding DataQDisconnect}" />
                <Button Content="Sort Louver Set"
                        Width="175"
                        Height="30"
                        Margin="5,5,5,5" 
                        Command="{Binding test}"/>
                <Button Content="Review Louver Report"
                        Width="175"
                        Height="30"
                        Margin="5,5,5,5"
                        Command="{Binding UpdateView}"
                        CommandParameter="Report" />
                <Button Content="Print Louver Set labels"
                        Width="175"
                        Height="30"
                        Margin="5,5,5,5" />
                <Button Content="Next Louver Set"
                        Width="175"
                        Height="30"
                        Margin="5,5,5,5"/>

            </StackPanel>

            <Button Grid.Column="1"
                    Grid.Row="5"
                    Content="Main Menu"
                    Width="175"
                    Height="30"
                    Margin="5,5,5,5"
                    Command="{Binding UpdateView}"
                    CommandParameter="Main" />


        </Grid>



    </Grid>
</UserControl>
