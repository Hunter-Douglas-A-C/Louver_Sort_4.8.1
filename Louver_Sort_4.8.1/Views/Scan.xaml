                <!--<lvc:CartesianChart   LegendLocation="Right"
                                    Pan="x"
                                    Background="DarkGray">
                    <lvc:CartesianChart.Series>
                        <lvc:LineSeries Values="{Binding VoltageValues}" />
                    </lvc:CartesianChart.Series>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="Raw Voltage" />
                    </lvc:CartesianChart.AxisY>
